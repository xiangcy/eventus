<% provide(:title, "Edit Event") %>

<script type="text/javascript"
	src="https://maps.googleapis.com/maps/api/js?key=YOUR_API_KEY&sensor=true">
</script>	

<div class="row-fluid">
  <div class="span10	offset1  well signup">                                                          
    <h1>Edit my event</h1><br/>
		<div>
			<%= form_for(@event) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>

			<div class="span7 left">
				<%= f.label :title, class:"eachItem"%>
				<%= f.text_field :title , class: "field span11"%>
				
				<%= f.label :content, :class=>"eachItem" %>
				<%= f.text_area :content,  :class=> "field span11" ,:width => "350px", :hight => "300px", placeholder: "Briefly introduce your event Here..."%>
			</div>
			<div class="span3" >
				<h5><em>Never forget to tell people WEHN and WHERE you event is going to held!</em></h4><br/>
				<label, class="eachItem">Event start time:</label><br>
				<div id="datetimepicker1"  name="event[time]" class="input-append date">
					<input data-format="MM/dd/yyyy hh:mm" type="text"></input>
					<span class="add-on">
						<i data-time-icon="icon-time" data-date-icon="icon-calendar">
						</i>
					</span>
				</div>

				<label, class="eachItem">Event end date:</label><br>
				
				<div id="datetimepicker2"  name="event[endtime]" class="input-append date">
					<input data-format="MM/dd/yyyy hh:mm" type="text"></input>
					<span class="add-on">
						<i data-time-icon="icon-time" data-date-icon="icon-calendar">
						</i>
					</span>
				</div>
			<label, class="eachItem">Place:</label>
			<%#= f.label :place %>
			<%= f.text_field :place, :class=>"eachItem"%>
				<label class="control-label" for="category">City:</label>

				<select class="span12" name="city">
					<option value="City">All Cities</option>
					<option value="Boston">Boston</option>
					<option value="Cambridge">Cambridge</option>
					<option value="Chicago">Chicago</option>
				</select>
				<label class="control-label" for="category">Category:</label>

				<select class="span12" name="category">
					<option value="category">All Categories</option>
					<option value="Sports">Sports</option>
					<option value="Music">Music</option>
					<option value="Movie">Movie</option>
				</select>
					
      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
			</div>
		<%end%>	
		</div>
		
  </div>
</div>

