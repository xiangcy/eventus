<% provide(:title, "Edit Event") %> 
<h1>Update your event</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@event) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      
      <%= f.label :title %>
      <%= f.text_field :title %>
      
      <%= f.label :starttime %>
      <%= f.text_field :time :id => "time_area" %>
      
      <%= f.label :endtime %>
      <%= f.text_field :endtime :id => "time_area"%>
        
      <%= f.label :place %>
      <%= f.text_field :place %>

      <%= f.label :content %>
      <%= f.text_area :content, placeholder: "Briefly introduce your event Here..."%>
      
      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>

  </div>
</div>