<% provide(:title, @event.title) %>
  <div class="row-fluid">
    <div class="span11 offset2">
      <div class="span8 ui-widget-header eventShowTitle"><h2 id = "titleShown" style="margin: 5px 0px;"><%= @event.title %></div></h2> 

    
    </div>
    <div class="span12">
    <div class="span3 offset1 ">
      
      <div class="row-fluid eventprofile">
	<div class="media">
	  <% if current_user?(@event.user) %>
	  <% else %>
	  <div class="pull-left vote">         
	    <%= link_to vote_event_path(@event, type: "up"), method: "post" do %>
	      <!--<i class="icon-arrow-up bigicon"></i>-->
	      <%=image_tag ("http://png-2.findicons.com/files/icons/2338/reflection/128/arrow_up_1.png"), :class=>"bigicon"%>
	    <% end %>
	    <p><span class="color votenumber"><%=@event.reputation_for(:votes).to_i %></span></p>
	    <%= link_to vote_event_path(@event, type: "down"), method: "post" do %>
	      <!--<i class="icon-arrow-down bigicon">--></i>
	      <%=image_tag ("http://png-1.findicons.com/files/icons/2338/reflection/128/arrow_down_1.png"),:class=>"bigicon"%>
	    <% end %>
	  </div>
	  <% end %>
	  <div class="pull-left imageProfile" style="padding-left: 10px;">
	  <%= image_tag(@event.event_image_url || "default_avatar.png",:class=>'media-object', :data=>{:src=>'holder.js/64*64'})%> 
	  </div>
	  <div class="media-body span12">
	    <div class="row-fluid">
	    <div class="span12">
	      <i class="icon-user"></i>
	    <p>Hosted by: <%=link_to @event.user.name, @event.user %>
	    </p><br>
	    <div class = "form-inline">
	      <i class="icon-time"></i>
	      <p><b>From: </b><%= @event.time.strftime('%a, %b %d, %Y %H:%M') %></p><br>
	      <i class="icon-time"></i>
	      <p><b>To: </b><%= @event.endtime.strftime('%a, %b %d, %Y %H:%M ') %></p><br>
	      <i class="icon-map-marker"></i>
	      <p id="locationShown">x<%= @event.place+", "+@event.city %></p><br>
	      <i class="icon-calendar"></i>
	      <p><a href="#" id="addCal"  data-placement="bottom" title="add events to google calendar">Add to Google Calendar! (Please allow pop up)</p></a><br>
	      <a href="#" ><i class="icon-edit"></i>Send an email to host</a><br>
	      <p><a class="writecomment"><i class="icon-comment"></i>Write a comment</a></p>
	    </div>

	    </div>
	            </div>

        </div>
	    <% if current_user?(@event.user) %>
	    <% else %>
	      <div class="span3" style="padding-top: 25px; text-align: center;">
	      <!--button attend event-->
	      <% unless current_user?(@event.user) %>
	      <div id="follow_form">
	      <% if current_user.attending?(@event) %>
	      <%= form_for(current_user.attendrelations.find_by_event_id(@event),html: { method: :delete }) do |f| %>
		<%= f.submit "Unattend", class: "btn btn-large" %>
		<% end %>
	      <% else %>
	      <%= form_for(current_user.attendrelations.build(event_id: @event.id)) do |f| %>
		<div><%= f.hidden_field :event_id %></div>
		<%= f.submit "Attend", class: "btn btn-large btn-primary" %>
		<% end %>
	      <% end %>
	      </div>
	      <% end %><!--button ends-->
	      <p><span class="color"><%= @event.participants.count %></span> people attend</p>
	      </div><% end %>
	    </div>
	    
	  </div><!--media body ends-->
      
      <div class="map">
	<h4>Where</h4>
	<hr class="line">
	<div>
	  <div id="map_canvas"><br/><br/></div>
	  <a id="returnAddress" class="madeUpButton">Reset center</a>
	</div>
        </div>
	<% if current_user?(@event.user) %>
	  <h5>Manage event</h5>
	  <div class="offset0 span12" style = "float:top">
	  <button class=" span3 btn" ><%=link_to "edit", edit_event_path(@event)%></button>
	  <button class=" span3 btn" ><%=link_to "delete", event_path(@event),method: :delete,data:{confirm:"Do you want to delete this event?"}%></button>
	  </div>
	<% end %>
      </div>

      
      
      <div class="span6 eventprofile">
	
        <div class="row-fluid ui-widget-content eventShowItems">
	
	<h4>Description</h4>
	<hr class="line">
	<div id = "summary" class="eventcontent ">
	<p id = "descriptionShown"><%= @event.content%></p>
	</div>
      </div>
        <div class="row-fluid ui-widget-content eventShowItems">
	<h4>Attending</h4>
	<hr class="line">
	<div>
	  <ul class="thumbnails attendlist">
	    <% @event.participants.each do |user| %>
	    <li class="span2">
	      <div class="thumbnail">
		<%=image_tag(user.image_url || "default_profile.jpg") %>
		<br>
		<p><% if @event.participants.count > 0 %> 
		  <%= link_to user.name, user %>
		   <p>Nobody has liked this event so far.</p>
		</p>
		  <% else %>
		 
		  <% end%>
	      </div>
	    </li>
	    <% end %>
	  </ul>
	</div>
      </div>
        <!--comments-->
        <div class="row-fluid ui-widget-content eventShowItems">
	<h4>Comments</h4>
	<hr class="line">
	  <div class="comments">
	    <ul class="commentlist">
	  <% @event.comment_threads.order('created_at DESC').each do |comment| %>
	    <li class="comment">
	  
	    <div class="commenthead">
	      <p><b><%= link_to comment.user.name, comment.user %></b> wrote<span style="float: right; margin-right:8px"><%= time_ago_in_words(comment.created_at) %> ago</span></p>
	    </div>
	    <div class="commentbody"><p><%= comment.body %></p></div>
	    </li>
	    <hr class="line">
	  <%end%>
	    </ul>
	  </div>
	<div class="writecomments span12">
	  <%= form_for(@new_comment) do |f|%>
	    <%=f.text_area :body, :placeholder => "Your comment goes here."%><br/><br/>
	    <%=f.hidden_field :event_id, :value => @event.id %>
	    <%=f.submit "Add comment", :class=>"btn btn-primary offset5"%>
	  <%end%>
	</div>
      </div>
    </div>
    <!--right begins-->
    <div>
          

    </div>
    </div>
  </div>
  <div class="resultsHidden"><p id="startTimeShown"><%= @event.time.strftime('%H:%M, %m/%d/%Y') %></p><b>To: </b><p id="endTimeShown"><%= @event.endtime.strftime('%H:%M, %m/%d/%Y') %></p></div>

