<% if current_user && !event.has_evaluation?(:votes, current_user) %><% else %><% end %>
<div class="searchEventsDiv" id="event-<%=event.id%>">
    <li class="searchevents">
      <%= link_to event do %>
      <div class="media eventListDiv media-list">
        <div class="pull-left vote">
	<%= link_to vote_event_path(event, type: "up"), :method => "post", :remote => true do %>
	  <%=image_tag ("http://png-2.findicons.com/files/icons/2338/reflection/128/arrow_up_1.png"), :class=>"bigicon"%>
	<% end %>
	<p><span class="votecolor votenumber"><%=event.reputation_for(:votes).to_i %></span></p>
	<%= link_to vote_event_path(event, type: "down"), :method => "post", :remote => true do %>
	  <%=image_tag ("http://png-1.findicons.com/files/icons/2338/reflection/128/arrow_down_1.png"),:class=>"bigicon"%>
	<% end %>
        </div>
        <div class="pull-left image">
        <%= image_tag(event.event_image_url || "default_avatar.png" ,:class=>'media-object', :data=>{:src=>'holder.js/64*64'})%> 
        </div>
        <div class="media-body span8">
        <%= link_to event.title, event, :class=>"color" %><br>
        <p><i class="icon-time"></i><%= event.time.strftime('%a, %b %d, %Y %H:%M') %>&nbsp&nbsp----&nbsp&nbsp<%= event.endtime.strftime('%a, %b %d, %Y %H:%M') %>&nbsp&nbsp&nbsp&nbsp</p><br>
        <p><i class="icon-map-marker"></i><%= event.place %></p><br>
        <p><%= event.content[0..150]+"..." %></p>
        </div>
        <%if controller.action_name=="index" && controller.controller_name=="events"%>
	<%=image_tag ("http://findicons.com/files/icons/2162/minimal_perception/32/gtk_close.png"), :class=>"bigicon closeIcon"%>
        <%else%>
        <%end%>
      </div>
      <%end%>
      <hr class="line">
    </li>
  </div>
 

  
