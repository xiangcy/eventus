<% provide(:title, 'Post Event') %>

<script type="text/javascript"
	src="https://maps.googleapis.com/maps/api/js?key=AIzaSyApTRZxR9qAHBk8vBJDwELX3ExZs5eATIE&sensor=false">
</script>

<style type="text/css">
  html { height: 10% }
  body { height: 10%; margin: 0; padding: 0 }
  #map_canvas { height: 10% }
</style>

<div class='row-fluid'>	
  <div class="span8 offset2 well signup">                                                          
    <h1 onclick="myFunction()">Post my event</h1><br/>
		<div>
			<%= form_for(@event) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>

			<div class="span8 left">

			
				<%= f.label :title, class:"eachItem"%>
				<%= f.text_field :title , class: "field span11"%>
				
				<%= f.label :content, :class=>"eachItem" %>
				<%= f.text_area :content,  :class=> "field span11" ,:width => "350px", :hight => "300px", placeholder: "Briefly introduce your event Here..."%>
			</div>
			<div class="span3 offset0" >

				<h5><em>Never forget to tell people WHEN and WHERE you event is going to held!</em></h4><br/>
				
				<label, class="eachItem">Event start time:</label>
				<input type="text" class="datetimepicker" name="event[time]"/>
				
				<label, class="eachItem">Event end date:</label>
				<input type="text" class="datetimepicker" name="event[endtime]"/>
				
				<label, class="eachItem">Place:</label>
				<%#= f.label :place %>
				<%= f.text_field :place, :class=>"eachItem"%>
			</div>
			<div>
			<label class="control-label" for="City">City:</label>
					<select name="city" multiple = "multiple">
					<option value="City">All Cities</option>
					<option value="Boston">Boston</option>
					<option value="Cambridge">Cambridge</option>
					<option value="Chicago">Chicago</option>
				</select>
				
				<label class="control-label" for="category">Category:</label>
				<select name="category" multiple = "multiple">
					<option value="category">All Categories</option>
					<option value="Sports">Sports</option>
					<option value="Music">Music</option>
					<option value="Movie">Movie</option>
				</select>

			</div>

			<%= f.submit "Post", :class=> "btn btn-large btn-primary" %>

			<%end%>	
		</div>

		<div id="map_canvas" style="width: 10%; height: 10%" onload="initialize()">
		</div>
  </div>
  
</div>
	

