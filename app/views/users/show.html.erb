<% provide(:title, @user.name) %>

<% if current_user?(User.find(params[:id])) %><!--view self profile-->
<div class="container-fluid">
  <div class="row-fluid">
    <div class="span10 offset1 tabbable">
      <div class="span2 sidenav">
      <ul class="nav nav-pills nav-stacked">
        <li><h4>Profile</h4></li>
        <hr class="line">
        <li class="active"><a href="#pill1" data-toggle="pill">My Account</a>
        <li><a href="#pill6" data-toggle="pill">Edit</a></li>
        <li><h4>Events</h4></li>
        <hr class="line">
        <li><a href="#pill3" data-toggle="pill">Host</a></li>
        <li><a href="#pill4" data-toggle="pill">Attend</a></li>
      </ul>
      </div>
      <div class="tab-content span10">
        <div class="tab-pane active" id="pill1">
          <div class="row-fluid">
            <ul class="thumbnails">
              <li class="span2"><div class="thumbnail">
                <%= image_tag("default_profile.jpg") %>
              </div></li>
              <li class="span4">
                <h4 style="color: blue"><%= @user.name %></h2>
                <p>
                  *** people like you.
                </p>
              </li>
              <li class="span5 cartoon">
                
                <div class="dialog span12">
                <span class="bot"></span>
                <span class="top"></span>
                <p>Want more people like you?</p>
                <%= link_to "Host an event", postevent_path %>
                </div><div><%= image_tag("image.jpg", :class=>"picture span3") %></div>
              </li>
            </ul>
          </div>
          <div class="row-fluid">
            <table class="table">
              <thead>
                <tr><th></th><th></th></tr>
              </thead>
              <tbody>
                <tr><td>Email Address</td><td class="content"><p><%= @user.email %></p></td></tr>                <tr><td>City</td><td class="content"><p><%= @user.city %></p></td></tr>
                <tr><td>Gender</td><td class="content"><p><%= @user.gender %></p></td></tr>
                <tr><td>Hobby</td><td class="content"><p><%= @user.hobby %></p></td></tr>
                <tr><td>Blog Address</td><td class="content"><p><%= @user.blog %></p></td></tr>
              </tbody>
            </table>
          </div>
        </div><!--tab1 ends-->
        <div class="tab-pane" id="pill6"><!--edit profile-->
          <div class="row-fluid">
            <div class="span12">
              <%= form_for(@user, :action => user_path(@user), :method => "put" ) do |f| %>
              <div class="row-fluid">
                <h4>Personal Info</h4>
                <hr class="line">
                <div class="span2" style="text-align: center;">
                  <div class="thumbnail"><%= image_tag("default_profile.jpg") %></div>
                  <br>
                  <button class="btn">Upload</button>
                </div>
                <div class="span8 offset1 profile">
                  <div class="form-inline">
                  <%= f.label :name %>
                  <%= f.text_field :name,:class=>"span7" %>
                  </div><br>
                  <div class="form-inline">
                  <%= f.label :email %>
                  <%= f.text_field :email,:class=>"span7" %>
                  </div><br>
                  <div class="form-inline">
                  <%= f.label :city %>
                  <%= f.select(:city, [['Not Public', ''],['Boston','Boston'],['New York','New York']],{},:class=>"span7") %>
                  </div><br>
                  <div class="form-inline">
                  <%= f.label :gender %>
                  <%= f.select(:gender, [['Not Public', ''],['Male','Male'],['Female','Female']],{},:class=>"span7")%>
                  </div><br>
                  <%= f.label :blog, "Blog Address(Optional)" %>
                  <%= f.text_field :blog, :class=>"span10" %>
                  
                  <%= f.label :hobby, "Hobby(Optional)" %>
                  <%= f.text_field :hobby, :class=>"span10", :value=>@user.hobby %>
                </div>  
              </div> 
              <div class="changepassword">
                <div>
                  <h4>Change Password</h4> 
                </div>
                <hr class="line">
                <div class="form-inline offset1">
                <%= f.label :password, "Change password:" %>&nbsp&nbsp&nbsp
                <%= f.password_field :password%>
                </div><br>
                <div class="form-inline offset1">
                <%= f.label :password_confirmation, "Confirm Password:" %>&nbsp&nbsp
                <%= f.password_field :password_confirmation%>
                </div>
              </div>
              <br><br>
              <%= f.submit "Save changes", class: "btn btn-large btn-primary"%>
              <% end %>
            </div>
          </div>
        </div>
        <div class="tab-pane" id="pill3"><!--events-->
          <div class="row-fluid events">
            <h4> Not happened Event (<%= @futureevents.count %>)</h4>
            <hr class="line">
            <ul class="media-list">
              <% @futureevents.each do |event| %>
              <%= render event %>
              <% end %>
            </ul>
            <h4> Out of date event (<%= @pastevents.count %>)</h4>
            <hr class="line">
            <ul class="media-list">
              <% @pastevents.each do |event| %>
              <%= render event %>
              <% end %>
            </ul>
          </div>
        </div>
        <div class="tab-pane" id="pill4">
          <div class="row-fluid events">
            <h4> Attend (<%= @user.attended_events.count %>)</h4>
            <hr class="line">
            <ul class="media-list">
              <% @user.attended_events.order('time DESC').each do |event| %>
              <%= render event %>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div> 
  </div>
</div>
<!--view others' profile-->
<% else %>
